dom-module#my-greeting
  link(rel='import', type='css', href='my-greeting.css')
  template
    h1.page-title {{greeting}}
    label(for="greeting-input") Update text to change the greeting.
    // Listens for "input" event and sets greeting to <input>.value
    input(value='{{greeting::input}}')#greeting-input
  
  script(src='my-greeting.js')
